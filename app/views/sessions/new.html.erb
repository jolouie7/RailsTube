<h1>Log in Page</h1>
<%= form_tag "/login" do  %>
  <%= label_tag :username %>
  <%= text_field_tag :username %> <br>

  <%= label_tag :password %>
  <%= password_field_tag :password_digest %> <br>

  <%= label_tag "Password confirmation" %>
  <%= password_field_tag :password_confirmation %>

  <%= submit_tag "Login" %>
<% end %>


<div>
<%= button_to "Back to Homepage", "/welcome", method: :get %>
</div>