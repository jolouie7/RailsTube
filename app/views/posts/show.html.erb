<div style="text-align:center">
  <h1>Title: <%= @post.name %></h1><br>
  <p>
    <video controls width="640" height="480" src="<%= @post.video %>"></video>
  </p>

  <strong>Description: <%= @post.description %></strong>
  <p> Created by: <%= @post.user.username.capitalize %> </p>
  <p>Like: <%= @post.like %> </p>


  <p>
    Submitted <%= time_ago_in_words(@post.created_at, include_seconds: true) %> ago
  </p>

  <%= link_to 'Edit', edit_post_path(@post), class:"btn btn-primary"  %> <br>
  <%= link_to 'Delete', new_post_path(@post), method: :delete, class:"btn btn-danger"  %>
  <!-- Put Video here -->

  <h3>Comments</h3>
  <%= render partial: "posts/comment", collection: @post.comments.reverse %>

  <%= render partial: "comments/form" %>
</div>